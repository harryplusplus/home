---
import type { DataEntryMap } from "astro:content";
import { getCollection } from "astro:content";

type Props = {
  collection: keyof DataEntryMap;
};

const { collection } = Astro.props;

const articles = await getCollection(collection);
const sortedArticles = articles.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<section>
  {
    sortedArticles.map((x) => (
      <>
        <article>
          <a href={`/${collection}/${x.id}`} class="article-link">
            <h3>{x.data.title}</h3>
            <p>
              <small>
                {x.data.pubDate.toLocaleDateString(undefined, {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </small>
            </p>
            {x.data.description ? <p>{x.data.description}</p> : null}
          </a>
        </article>
        <hr />
      </>
    ))
  }
</section>

<style>
  section {
    margin-top: 20px;
  }

  article:hover h3 {
    text-decoration-line: underline;
  }

  .article-link {
    text-decoration: none;
    display: block;
    color: inherit;
  }

  p {
    margin: auto;
  }

  h3 {
    margin: auto;
  }

  hr {
    border: none;
    border-top: 1px solid rgba(200, 200, 200, 0.5);
  }
</style>
